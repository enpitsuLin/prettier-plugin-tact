{
  "name": "prettier-plugin-tact",
  "type": "module",
  "version": "0.1.4",
  "description": "Prettier plugin for tact-lang",
  "author": "enpitsulin <enpitsulin@gmail>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/enpitsuLin/prettier-plugin-tact"
  },
  "keywords": [
    "prettier",
    "plugin",
    "tact",
    "ton"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-tact": "github:tact-lang/tree-sitter-tact"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "@types/node": "^20.14.9",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.6.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
